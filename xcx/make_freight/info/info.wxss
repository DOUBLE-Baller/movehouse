page {
    background: #ffffff;
}

.top {
    width: 100%;
    padding: 30rpx 40rpx;
}

.top-right {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
}

.nickname {
    font-size: 48rpx;
    margin-bottom: 20rpx;
}

.phone-img {
    width: 22rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.phone {
    color: #808088;
}

.top-tab {
   
    width: 670rpx;
    height: 150rpx;
    background-size: 100% 100%;
}

.top-tab-item {
    width: 50%;
}

.line-box {
    width: 1px;
    height: 60rpx;
    background: #212330;
}

.order-img {
    width: 50rpx;
    height: 57rpx;
    margin-bottom: 20rpx;
}

.explain-img {
    width: 57rpx;
    height: 57rpx;
    margin-bottom: 16rpx;
}

.item-box {
    width: 100%;
    padding-left: 40rpx;
    margin-top: 40rpx;
}

.item {
    width: 100%;
    padding: 30rpx 40rpx 30rpx 0;
    border-bottom: 1px solid #f7f7f7;
}

.item-left-img {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.item-right-img {
    width: 14rpx;
    height: 24rpx;
}

.btn {
    width: 680rpx;
    height: 80rpx;
    border-radius: 35px;
}

.driver-btn {
    background: #f7f7f7;
    margin-top: 70rpx;
}

.driver-btn:after {
    border: 0;
}

.logout-btn {
    border: 1px solid #212330;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
}