page {
    background: #ffffff;
}

.view-box {
    width: 100%;
    height: 20rpx;
    background: #f3f3f3;
}

.question-box {
    width: 100%;
    font-weight: bold;
    padding: 40rpx;
    border-bottom: 1px solid #dfdfdf;
}

.img-animation {
    animation: que 400ms linear forwards;
}

@keyframes que {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(90deg);
    }
}

.img-animation-n {
    animation: recover 400ms linear forwards;
}

@keyframes recover {
    0% {
        transform: rotate(90deg);
    }

    100% {
        transform: rotate(0deg);
    }
}

.question-r {
    width: 17rpx;
    height: 30rpx;
}

.question {
    width: 620rpx;
}

.answer {
    width: 100%;
    font-size: 28rpx;
    padding: 30rpx 40rpx;
    border-bottom: 1px solid #dfdfdf;
}

.footer {
    width: 100%;
    margin: 150rpx 0 30rpx 0;
}

.server-btn {
    width: 300rpx;
    height: 80rpx;
    color: #ffd101;
    border: 1px solid #ffd101;
    border-radius: 35px;
    align-items: center;
}

.server-img {
    width: 40rpx;
    height: 33rpx;
    margin-right: 10rpx;
}